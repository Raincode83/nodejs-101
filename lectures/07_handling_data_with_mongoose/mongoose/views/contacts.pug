extends ./base


block content
    h1 Contacts

    ul
        each contactItem in contactItems
            li #{contactItem.name}, #{contactItem.email}, #{contactItem.phonenumber}

    form(action="/contacts/" method="POST")
        input(type="text" name="name" placeholder="이름" required)
        input(type="email" name="email" placeholder="이메일" required)
        input(type="text" name="phonenumber" placeholder="휴대폰 번호" required)
        input(type="submit" value="연락처 추가하기")
